{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    <style>
        .reg-form {
            padding: 20px;
            margin-top: 20px;
        }
        @media (max-width: 767px) {
            .reg-form {
                margin: 0;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container card reg-form">
        <h1>Регистрация</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}

        <button class="btn btn-md btn-primary">Зарегистрироваться</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
