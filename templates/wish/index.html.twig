{% extends 'base.html.twig' %}

{% block title %}Wish index{% endblock %}

{% block body %}
    <div style="padding: 20px">
        <h1>Список желаний</h1>

        <div class="col-sm-4 col-lg-2" style="padding: 0">
        <a href="{{ path('wish_new') }}">
            <button class="btn btn-primary btn-block">Создать</button>
        </a>
        </div>

        <table class="table table-responsive-list">
            <thead>
            <tr>
                <th>Айди</th>
                <th>Заголовок</th>
                <th>Описание</th>
                <th>Ссылка</th>
                <th>Картинка</th>
                <th>Дата создания</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for wish in wishes %}
                <tr>
                    <td data-th="Айди">{{ wish.id }}</td>
                    <td data-th="Заголовок">{{ wish.title }}</td>
                    <td data-th="Описание">{{ wish.description }}</td>
                    <td data-th="Ссылка"><a href="{{ wish.url }}">Ссылка</a></td>
                    <td data-th="Картинка"><a href="{{ wish.image }}">Картинка</a></td>
                    <td data-th="Дата создания">{{ wish.createdAt|format_datetime(pattern='d MMMM yyyy, HH:mm', locale='ru') }}</td>
                    <td data-th="Статус">{{ wish.status }}</td>
                    <td data-th="Действия">
                        <a href="{{ path('wish_show', {'id': wish.id}) }}">Открыть</a>
                        <a href="{{ path('wish_edit', {'id': wish.id}) }}">Изменить</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Список пуст</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
