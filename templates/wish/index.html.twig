{% extends 'base.html.twig' %}

{% block title %}Wish index{% endblock %}

{% block body %}
    <h1>Список желаний</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Айди</th>
                <th>Заголовок</th>
                <th>Описание</th>
                <th>Ссылка</th>
                <th>Картинка</th>
                <th>Дата создания</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for wish in wishes %}
            <tr>
                <td>{{ wish.id }}</td>
                <td>{{ wish.title }}</td>
                <td>{{ wish.description }}</td>
                <td>{{ wish.url }}</td>
                <td>{{ wish.image }}</td>
                <td>{{ wish.createdAt }}</td>
                <td>{{ wish.status }}</td>
                <td>
                    <a href="{{ path('wish_show', {'id': wish.id}) }}">Открыть</a>
                    <a href="{{ path('wish_edit', {'id': wish.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Список пуст</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('wish_new') }}">Создать</a>
{% endblock %}
